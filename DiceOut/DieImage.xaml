<UserControl
    x:Class="DiceOut.DieImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DiceOut"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Canvas x:Name="DieFace" Width="100" Height="100" Margin="10">
            <Image x:Name="Face1" Width="100" Height="100" Source="Assets/die_1.png" Visibility="Visible"/>
            <Image x:Name="Face2" Width="100" Height="100" Source="Assets/die_2.png" Visibility="Collapsed"/>
            <Image x:Name="Face3" Width="100" Height="100" Source="Assets/die_3.png" Visibility="Collapsed"/>
            <Image x:Name="Face4" Width="100" Height="100" Source="Assets/die_4.png" Visibility="Collapsed"/>
            <Image x:Name="Face5" Width="100" Height="100" Source="Assets/die_5.png" Visibility="Collapsed"/>
            <Image x:Name="Face6" Width="100" Height="100" Source="Assets/die_6.png" Visibility="Collapsed"/>
        </Canvas>
    </Grid>
</UserControl>
